<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.meinil.system.mapper.SysUserMapper">
    <resultMap type="com.meinil.system.domain.entity.SysUser" id="SysUserResult">
        <id     property="id"                 column="id"                    />
        <result property="nickname"           column="nickname"              />
        <result property="username"           column="username"              />
        <result property="password"           column="password"              />
        <result property="status"             column="status"                />
        <result property="email"              column="email"                 />
        <result property="phone"              column="phone"                 />
        <result property="delFlag"            column="del_flag"              />
        <result property="createBy"           column="create_by"             />
        <result property="createTime"         column="create_time"           />
        <result property="updateBy"           column="update_by"             />
        <result property="updateTime"         column="update_time"           />
    </resultMap>

    <sql id="BaseField">id, nickname, username, password, status, email, phone, del_flag, create_by, create_time, update_by, update_time</sql>

    <select id="selectUserByUserName" resultType="com.meinil.system.domain.entity.SysUser">
        SELECT <include refid="BaseField" /> FROM sys_user WHERE username = #{username}
    </select>

    <insert id="insertUser">
        insert into sys_user(
            <if test="username != null and username != ''">username,</if>
            <if test="nickname != null and nickname != ''">nickname,</if>
            <if test="password != null and password != ''">password,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="email != null and email != ''">email,</if>
            <if test="phone != null and phone != ''">phone,</if>
            <if test="delFlag != null and delFlag != ''">del_flag,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null and updateBy != ''">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            id
        ) values(
            <if test="username != null and username != ''">#{username},</if>
            <if test="nickname != null and nickname != ''">#{nickname},</if>
            <if test="password != null and password != ''">#{password},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="email != null and email != ''">#{email},</if>
            <if test="phone != null and phone != ''">#{phone},</if>
            <if test="delFlag != null and delFlag != ''">#{delFlag},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null and updateBy != ''">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            #{id}
        )
    </insert>
</mapper>